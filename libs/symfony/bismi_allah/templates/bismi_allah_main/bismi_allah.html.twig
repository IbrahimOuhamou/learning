{% extends 'base.html.twig' %}
{% block body %} 
<h1>
بسم الله الرحمن الرحيم
<br/>
{{ bismi_allah_var }}
</h1>
<p>
    {% if bismi_allah_var > 10 %}
        subhana Allah bismi_allah_var > 10
    {% else %}
        subhana Allah bismi_allah_var < 10
    {% endif %}
</p>

<table>
    <tr>
        <th>id</th>
        <th>name</th>
        <th>link</th>
    <tr>

    {% for bismi_allah in bismi_allah_arr %}
    <tr>
            <td> {{ bismi_allah.id }} </td>

            <td> {{ bismi_allah.name|upper|lower|title }} </td>
            <td> <a href="{{ path('app_bismi_allah_show_id', { id: bismi_allah.id }) }}"> show page </a> </td>
    </tr>
    {% endfor %}

</table>

<img src="{{ asset('images/dikr_image.jpg') }}" alt="dikr image" />

{% endblock %}
